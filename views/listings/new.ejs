<% layout('./layout/boilerplate') -%>

  <body>
    <main>
      <div class="main-new">

        <form action="/listings" method="post" class=" form needs-validation" novalidate enctype="multipart/form-data">

          <h1 style="font-weight: 700;">Create New Listing</h1>

          <div class="title">
            <label for="title">Tilte</label><br>
            <input type="text" name="listing[title]" id="title" placeholder="Enter Tilte" required>
            <div class="valid-feedback ">
              Looks good!
            </div>
            <div class="invalid-feedback">
              title Should be required.
            </div>
          </div>

          <div class="desc">
            <label for="title">Description</label><br>
            <textarea name="listing[description]" id="desc" required> </textarea>
            <div class="invalid-feedback">
              Description Should be required.
            </div>
          </div>

          <!-- <div class="img">
            <label for="img">Img Url/link</label><br>
            <input type="text" name="" placeholder="Enter Image url/link">
          </div> -->

          <div class="mb-3">
            <label for="formFileDisabled" class="form-label">Upload listing </label>
            <input class="form-control" type="file" id="formFileDisabled" name="listing[image]" required>
          </div>

          <div class="price-country">
            <div class="price">
              <label for="price">Price</label><br>
              <input type="number" name="listing[price]" placeholder="1200" id="price" required>
              <div class="invalid-feedback">
                Price Should be required.
              </div>
            </div>

            <div class="country">
              <label for="country">Country</label><br>
              <input type="text" name="listing[country]" placeholder="America" id="country" required>
              <div class="invalid-feedback">
                Country Should be required.
              </div>
            </div>
          </div>

          <div class="location">
            <label for="locate">Location</label><br>
            <input type="text" name="listing[location]" id="locate" placeholder="Enter location" required>
            <div class="invalid-feedback">
              Location Should be required.
            </div>
          </div>
          <button class="add-btn">ADD</button>
        </form>
      </div>
    </main>
  </body>