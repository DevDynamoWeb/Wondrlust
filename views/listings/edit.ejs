<% layout('./layout/boilerplate') -%>

  <body>
    <main>
      <div class="main-new" style="display: flex">
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="form"
          enctype="multipart/form-data">
          <h1 style="font-weight: 700;">Edit your Listing</h1>
          <div class="title">
            <label for="title">Tilte</label><br>
            <input type="text" name="listing[title]" id="title" value="<%= listing.title %>" required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>

          <div class="desc">
            <label for="title">Description</label><br>
            <textarea name="listing[description]" id="desc" required> <%= listing.description %></textarea>
            <div class="invalid-feedback">
              Description Should be required.
            </div>
          </div>



          <div class="mb-3">
            <label for="formFileDisabled" class="form-label">Upload listing </label>
            <input class="form-control" type="file" id="formFileDisabled" name="listing[image]">
          </div>

          <div class="price-country">
            <div class="price">
              <label for="price">Price</label><br>
              <input type="number" name="listing[price]" value="<%= listing.price %>" id="price" required>
              <div class="invalid-feedback">
                Price Should be required.
              </div>
            </div>

            <div class="country">
              <label for="country">Country</label><br>
              <input type="text" name="listing[country]" value="<%= listing.country %>" id="country" required>
              <div class="invalid-feedback">
                Country Should be required.
              </div>
            </div>
          </div>

          <div class="location">
            <label for="locate">Location</label><br>
            <input type="text" name="listing[location]" id="locate" value="<%= listing.location %>" required>
            <div class="invalid-feedback">
              Location Should be required.
            </div>
          </div>
          <button class="add-btn">Edit</button>
        </form>
        <div>
          <div class="mb-3 p-4 al-center">
            <!-- original Listing Image -->
            <img src="<%= originalImageUrl %>" alt="" srcset="">
          </div>
        </div>
      </div>
    </main>
  </body>

  </html>